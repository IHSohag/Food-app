<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#D8C5C9"
    tools:context=".payment">
    <TextView
        android:textColor="#651C8C"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Select your payment method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/spinnerId"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
    <TextView
    android:textStyle="bold"
    android:textSize="20sp"
    android:text="Enter your payment number"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/numberEditTextId"
        android:layout_margin="20dp"
        android:inputType="number"
        android:hint="Enter your number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Enter your pin number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/passwordEditTextId"
        android:layout_margin="20dp"
        android:inputType="textPassword"
        android:hint="Enter your pin number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/confirmButtonId"
        android:layout_gravity="center"
        android:text="confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>